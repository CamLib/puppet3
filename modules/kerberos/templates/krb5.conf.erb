[logging]
    default = SYSLOG:INFO:LOCAL7

[libdefaults]
    default_realm = <%= realm -%>
    dns_lookup_realm = true
    dns_lookup_kdc = true
    ticket_lifetime = 24h
    forwardable = yes

[appdefaults]
    pam = {
        debug = false
        ticket_lifetime = 36000
        renew_lifetime = 36000
        forwardable = true
        krb4_convert = false
    }

[realms]
    <%= domain -%> = <% realm %>
    .<%= domain -%> = <% realm %>
