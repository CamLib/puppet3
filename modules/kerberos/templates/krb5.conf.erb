[logging]
    default = SYSLOG:INFO:LOCAL7

[libdefaults]
    ticket_lifetime = 24000
    clock_skew = 300
    default_realm = <%= realm -%>

[realms]
    <%= realm -%>  = {
        <% servers.each do |server| -%>
        kdc = <%= server -%>:88
        <% end -%>
        <% servers.each do |server| -%>
        admin_server = <%= server -%>:464
        <% end -%>
        default_domain = <%= domain %>
    }

[domain_realm]
    <%= domain -%> = <%= realm -%>

